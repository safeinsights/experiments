{
  "name": "together-ai-code-assistant",
  "displayName": "Together AI Code Assistant",
  "description": "Chat with LLMs on Together.ai to modify your code",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": ["Other"],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "together-ai-assistant.openChat",
        "title": "Open Together AI Chat"
      }
    ],
    "configuration": {
      "title": "Together AI Assistant",
      "properties": {
        "together-ai-assistant.provider": {
          "type": "string",
          "enum": ["ollama", "together"],
          "default": "ollama",
          "description": "LLM provider to use (ollama for local, together for Together.ai)"
        },
        "together-ai-assistant.apiKey": {
          "type": "string",
          "default": "",
          "description": "Your Together.ai API key (only needed when provider is 'together')"
        },
        "together-ai-assistant.model": {
          "type": "string",
          "default": "llama3",
          "description": "The model to use (e.g., 'llama3' for Ollama, 'meta-llama/Llama-3-70b-chat-hf' for Together.ai)"
        },
        "together-ai-assistant.ollamaUrl": {
          "type": "string",
          "default": "http://localhost:11434",
          "description": "Ollama API URL"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "axios": "^1.6.0"
  }
}