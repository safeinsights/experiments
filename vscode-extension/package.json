{
  "name": "safeinsights-ai-companion",
  "displayName": "SafeInsights AI Companion",
  "description": "AI-powered code assistant for SafeInsights development",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": ["Other"],
  "icon": "logo.png",
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "safeinsights-ai-companion.openChat",
        "title": "Open SafeInsights AI Chat"
      }
    ],
    "viewsContainers": {
      "panel": [
        {
          "id": "safeinsights-ai-companion",
          "title": "SafeInsights AI Companion",
          "icon": "logo.png"
        }
      ]
    },
    "views": {
      "safeinsights-ai-companion": [
        {
          "id": "safeinsights-ai-companion.chatView",
          "name": "AI Chat",
          "type": "webview",
          "icon": "logo.png"
        }
      ]
    },
    "configuration": {
      "title": "SafeInsights AI Companion",
      "properties": {
        "safeinsights-ai-companion.provider": {
          "type": "string",
          "enum": ["ollama", "together"],
          "default": "ollama",
          "description": "LLM provider to use (ollama for local, together for Together.ai)"
        },
        "safeinsights-ai-companion.apiKey": {
          "type": "string",
          "default": "",
          "description": "Your Together.ai API key (only needed when provider is 'together')"
        },
        "safeinsights-ai-companion.model": {
          "type": "string",
          "default": "llama3",
          "description": "The model to use (e.g., 'llama3' for Ollama, 'meta-llama/Llama-3-70b-chat-hf' for Together.ai)"
        },
        "safeinsights-ai-companion.ollamaUrl": {
          "type": "string",
          "default": "http://localhost:11434",
          "description": "Ollama API URL"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "axios": "^1.6.0"
  }
}